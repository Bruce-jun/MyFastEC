<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/itv_item_shop_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="{fa-check-circle}"
        tools:ignore="HardcodedText"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_item_shop_car"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_title_item_shop_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="商品标题"
            android:textColor="@color/wet_chat"/>
        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/tv_descr_item_shop_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:maxLines="3"
            android:text="商品描述"
            android:textColor="@color/wet_chat"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_price_item_shop_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="￥2.00"
            android:textColor="@color/blue_like"/>


    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/icon_minus_item_shop_car"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="{fa-minus-square-o}"
            tools:ignore="HardcodedText"/>
        <TextView
            android:id="@+id/tv_numb_item_shop_car"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:gravity="center"
            tools:ignore="HardcodedText"/>

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/icon_plus_item_shop_car"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="{fa-plus-square-o}"
            tools:ignore="HardcodedText"/>


    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>